<!DOCTYPE html>
<html lang="es">

<%- include("partials/head") -%>

    <body class="bodyloginnuevo">
        <div class=containerr>
            <%- include("partials/header") -%>
            <hr>

            
            <form action="/register" method="POST" class="registro-form" enctype="multipart/form-data">
                <div class="form-register">
                    <h5>Crea tu Cuenta</h5>

                    <div class="input-register">
                        <div class="controlsuno">
                            <div  class="controlsunocaja">
                                <input class="controls-register" type="text" name="nombre" value="<%= locals.oldData ? oldData.nombre : null  %>" placeholder="Nombre">
                                
                                <% if (locals.errors && errors.nombre){ %>
                                    <p class = "erroresregister">
                                    <%= errors.nombre.msg %>
                                    </p>
                                    <% } else {%>
                                        <div class="error-front-register-nombre"></div>
                                        <% } %>
                            </div>
                            <div>
                                <input class="controls-register-apellido" type="text" name="apellido" value="<%= locals.oldData ? oldData.apellido : null  %>" placeholder="Apellido">
                                
                                <% if (locals.errors && errors.apellido){ %>
                                    <p class = "erroresregister">
                                    <%= errors.apellido.msg %>
                                    </p>
                                    <% } else {%>
                                        <div class="error-front-register-apellido"></div>
                                        <% } %>

                                        
                            </div>
                        </div>
                        <div class="controlsdos">
                            <div class="controlsunocaja">
                                <input class="controls-register" type="email" name="email" value="<%= locals.oldData ? oldData.email : null  %>" placeholder="Email">
                                <% if (locals.errors && errors.email){ %>
                                    <p class = "erroresregister">
                                    <%= errors.email.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div>
                                <input class="controls-register-contraseÃ±a" type="password" name="password" value="" placeholder="Password">
                                <% if (locals.errors && errors.password){ %>
                                    <p class = "erroresregister">
                                    <%= errors.password.msg %>
                                    </p>
                                    <% } else { %>
                                    <div class="error-front-register-contraseÃ±a"></div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="optionregister">
                        <div class="exam">
                            <label>Avatar :</label>
                            <input type="file" name="avatar">
                            <% if (locals.errors && errors.avatar){ %>
                                <p class = "erroresregister">
                                <%= errors.avatar.msg %>
                                </p>
                            <% } %>
                        </div>
                       
                        <input class="buttons-register" type="submit" value="Registrar !">
                        
                    </div>
                    
                </div>
            </form>
        </div>
        <%- include("partials/footer") -%>
        <script src="/js/register-form.js"></script>
    </body>

</html>